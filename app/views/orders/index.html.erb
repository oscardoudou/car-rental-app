<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Car id</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.car_id %></td>

        <% if (order.status == 'returned') %>
            <td><font color="green"><%= order.status %></font></td>
        <% else %>
            <td><font color="red"><%= order.status %></font></td>
        <% end %>
        
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% if order.status == 'checkedout'%>
             <%# <%= button_to 'Return', return_order_path(order), :method => :get %>
            <%= link_to 'Return', controller:"orders", action:"return", id:order %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

