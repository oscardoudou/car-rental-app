<% provide(:title, 'All users') %>
<h1>All users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

<tbody>

  <% @users.each do |user| %>

     <tr>

       <td> <%=user.name%></td>
       <td><%=user.email%></td>
       <%@reservation=Reservation.where(:user_id=>current_user.id)%>
        <% if current_user.admin?%>
           <td><%=link_to "show",user_path(user)%></td>
           <td><%=link_to "edit",edit_user_path(user)%></td>
           <%if @reservation != nil%>
               <td><%= link_to "delete", user, method: :delete, data: { confirm: "You sure?This user still has a reservation." } %></td>
               <%else%>
           <td><%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %></td>
               <%end%>
        <% end %>


  <% end %>
  </tr>
</tbody>
</table>