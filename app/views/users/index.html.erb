<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.name%>
        <%= link_to user.email%>
        <% if current_user.admin? && !current_user?(user) %>
            <%=link_to "edit",edit_user_path(user)%>
            <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>

      </li>
  <% end %>
</ul>